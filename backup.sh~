#message=$(date)

myDate=`date`

#if [ $1 ]
#	then
#		message=$1
#fi

echo "Do you wish add massage?"

select yn in "Yes" "No"; do
	case $yn in
		Yes ) echo "Ja bitte";;
		No ) echo "Nein danke";;
	esac
done

